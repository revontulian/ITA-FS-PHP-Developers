                <label for="endDate">Fecha de fin</label>
                <input type="date" id="endDate" name="endDate" class="form-control">
            </div>
            <div class="form-group">
                <label for="provity">Prioridad</label>
                <input type="number" id="provity" name="provity" class="form-control" value="1" min="1" max="5">
