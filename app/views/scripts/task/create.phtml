        </form>
    </section>

    <section class="recent-tasks">
        <h2>Tareas Recientes</h2>
        <?php if (!empty($this->tasks) && is_array($this->tasks)): ?>
            <?php foreach ($this->tasks as $task): ?>
                <div class="task-card">
                    <h3><?= htmlspecialchars($task['nameTask'] ?? '') ?></h3>
                    <p>Estado: <?= htmlspecialchars($task['taskStatus'] ?? '') ?></p>
                    <p>Prioridad: <?= htmlspecialchars($task['provity'] ?? '') ?></p>
                </div>
            <?php endforeach; ?>
        <?php else: ?>
            <p>No hay tareas registradas.</p>
        <?php endif; ?>
    </section>
</body>
</html>